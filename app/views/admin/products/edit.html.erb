<div class="inner">
    <h4 class="banner">商品編集</h4>
    <%= form_with model: @product, url: admin_product_path(@product.id), local: true do |f| %>

    <table class="table">
          <tr class="label">
              <th>商品画像</th>
              <td><%= attachment_image_tag @product, :image %><br>
                  <%= f.attachment_field :image, placeholder: "商品画像" %>
              </td>
          </tr>
          </br>
          <tr class="label">
              <th>商品名</th>
              <td><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"商品名"%></td>
          </tr>
          <tr class="label">
              <th>商品説明</th>
              <td><%= f.text_field :description, autofocus: true, id:"inputName", placeholder:"商品説明"%></td>
          </tr>
          <tr class="label">
              <th>ジャンル</th>
              <td>
                  <label class="radio_button">
                    <%= f.collection_select(:genre_id, @genres, :id, :name) %>
                  </label>
              </td>
          </tr>
          <tr class="label">
              <th>税抜価格</th>
              <td><%= f.text_field :tax_excluded_price, autofocus: true, id:"inputName", placeholder:"xxxx"%></td>
          </tr>
          <tr class="label">
              <th>販売ステータス</th>
              <td>
                <%= f.select :sale_status, [['販売中', true], ['販売停止', false]] %>
              </td>
          </tr>

    </table>
        <%= f.submit "編集内容を保存",class:'button' %>
     <% end %>
 </div>
