
<%# admin側ヘッダー挿入部分 %>

<h1>商品新規登録ページ</h1>
<%= form_with model: @product, local:true do |f| %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :discription %>
  <h4>税抜価格</h4>
  <%= f.text_field :name %>
  <h4>販売ステータス</h4>
  <label><%= f.radio_button :sale_status, true %> 販売中</label>
  <label><%= f.radio_button :sale_status, false %> 販売停止中</label>
  <%= f.submit '投稿' %>
<% end %>