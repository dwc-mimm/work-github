<!--%= render 'layouts/header' %-->

<div class='container'>
 <div class='row'>
  <div class='col-md-12'>
<h4>会員一覧</h4>
<table class="table table-bordered">
 <tr>
  <th>会員ID</th><th>氏名</th><th>メールアドレス</th><th>ステータス</th>
 </tr>
  <% @customers.each do |customer| %>
 <tr>
  <td><%= customer.id %></td>
  <td><%= link_to customer.last_name, admin_customer_path(customer) %>
      <%= link_to customer.first_name,admin_customer_path(customer)  %></td>
  <td><%= customer.email %></td>
  <td><%= customer.is_deleted %></td>
 </tr>
  <% end %>
 
 </table>
 <tr>
  <%= paginate @customers %>
 </tr>
</div>
</div>
</div>
 