<div class='container-fluid'>
 <div class='row'>
  <div class='mx-auto col-6 text-center'>
<h4>会員一覧</h4>
<table class="table table-striped">
 <tr>
  <th>会員ID</th><th>氏名</th><th>メールアドレス</th><th>ステータス</th>
 </tr>
  <% @customers.each do |customer| %>
 <tr>
  <td><%= customer.id %></td>
  <td><%= link_to customer.last_name, admin_customer_path(customer) %>
      <%= link_to customer.first_name,admin_customer_path(customer)  %></td>
  <td><%= customer.email %></td>
  <% if customer.is_deleted == false %>
    <td>有効</td>
  <% else %>
    <td>退会</td>
  <% end %>
 </tr>
  <% end %>

 </table>
 <tr>
  <%= paginate @customers %>
 </tr>
</div>
</div>
</div>
