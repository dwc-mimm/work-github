
<div class="container-fluid col-lg-10">
    <div class="row">
        <div class="col-md-3 mb-3">
          </br>
         <h1><span class="badge badge-secondary offset-md-3">会員情報編集</span></h1>
       </div>
    </div>

    <table class="table">
    <%= form_with model: @customer, url: admin_customer_path, local:true do |f| %>
        <tbody>
        <tr>
            <th>氏名</th>
            <td><%= f.text_field :last_name, autofocus: true, id:"inputName", placeholder:"山田"%></td>
            <td><%= f.text_field :first_name, autofocus: true, id:"inputName", placeholder:"花子"%></td>
        </tr>
        </tbody>
        <tbody>
        <tr>
            <th>フリガナ</th>
            <td><%= f.text_field :last_name_kana, autofocus: true, id:"inputName", placeholder:"ヤマダ"%></td>
            <td><%= f.text_field :first_name_kana, autofocus: true, id:"inputName", placeholder:"ハナコ"%></td>
        </tr>
        </tbody>
        <tbody>
        <tr>
             <th>郵便番号(ハイフンなし)</th>
             <td><%= f.text_field :postcode, autofocus: true, id:"inputName", placeholder:"0000000"%></td>
        </tr>
        </tbody>
        <tbody>
        <tr>
             <th>住所</th>
              <td><%= f.text_field :address, autofocus: true, id:"inputName", placeholder:"東京都渋谷区代々木神園町0-0"%></td>
        </tr>
        </tbody>
        <tbody>
        <tr>
             <th>電話番号(ハイフンなし)</th>
              <td><%= f.text_field :phone_number, autofocus: true, id:"inputName", placeholder:"00000000000"%></td>
        </tr>
        </tbody>
        <tbody>
        <tr>
             <th>メールアドレス</th>
              <td><%= f.text_field :email, autofocus: true, id:"inputName", placeholder:"hoge@example.com"%></td>
        </tr>
        </tbody>
        <tbody>
         <tr>
          <th>会員ステータス</th>
          <td><%= f.select :is_deleted, [['有効', false], ['退会', true]] %></td>
         </tr>
        </tbody>

    </table>

        <div class="row">
            <div class="col-md-4 offset-md-5">
                <%= f.submit "編集内容を保存",class:'btn btn-success' %>
                <% end %>
            </div>
        </div>



 </div>
