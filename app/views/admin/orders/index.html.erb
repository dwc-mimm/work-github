<%= render 'layouts/header' %>
<div class="inner">
  <h2>注文履歴一覧(全<%= @orders.count %>件)</h2>
  <table class='table table-hover border-bottom'>
        <thead class='thead-white'>
          <tr>
            <th class='text-center'>購入日時</th>
            <th class='text-center'>購入者</th>
            <th class='text-center'>注文個数</th>
            <th class='text-center'>注文ステータス</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
          <tbody>
            <tr>
              <td class='text-center'>
                <%= link_to order_params order.created_at.strftime('%U/%m/%d %h:%m:%s') %>
              </td>
              <td><%= customer.name(order_params) %></td>
              <td><%= product.count(order_params) %></td>
              <td><%= order.order_status %></td>
              
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>

<!--< %= paginate @order %>-->
<%= render 'layouts/footer' %>

