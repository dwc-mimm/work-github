<div class="inner">
  <h2>注文履歴詳細</h2>
  <th>購入者</th><%= link_to admin_customer.id_path name%>
  <th>注文日</th><%= order.created_at.strftime('%y/%m/%d') %>
  <th>配送先</th><%= %>
  <th>支払い方法</th><%= %>
  <th>注文ステータス</th><%= %>
  
  <table class='table table-hover border-bottom'>
        <thead class='thead-white'>
          <tr>
            <th class='text-center'>商品名</th>
            <th class='text-center'>単価(税込)</th>
            <th class='text-center'>数量</th>
            <th class='text-center'>小計</th>
            <th class='text-center'>製作ステータス</th>
          </tr>
        </thead>
        <% @order_products.each do |order_product| %>
          <tbody>
            <tr>
              <td class='text-center'>
                <%= order_products.name(order_params) %>
              </td>
              <td><%= product.price(order_params) %></td>
              <td><%= product.count(order_params) %></td>
        <% sum = 0 %>
        <% @carts.each do |cart| %> <tr>
  <td><%= cart.product.name %></td>
  <td><%= cart.product.tax_excluded_price %></td>
  <td><%= cart.product.product_quantity %></td>
  <td><%= @cart.subtotal %>
      <% sum += cart.subtotal %></td>
 </tr>
  <% end %>
              <td><%= order.order_status %></td>
              
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>

