<div class='container-fluid'>
 <div class='row'>
  <div class='mx-auto col-md-6'>
   <h4 class="text-center">配送先登録/一覧</h4>

  <%= form_with model: @delivery, url:deliveries_path, local:true do |f| %>

    <div class="form-group">
     <tr><%= f.label :"郵便番号(ハイフンなし)" %></tr>
     <tr><%= f.text_field :postcode, autofocus: true, class: "form-control", placeholder: "0000000" %></tr>
    </div>
    <div class="form-group">
     <tr><%= f.label :"住所" %></tr>
     <tr><%= f.text_field :address, autofocus: true, class: "form-control", placeholder: "東京都◯◯" %></tr>
    </div>
    <div class="form-group">
     <tr><%= f.label :"宛名" %></tr>
     <tr><%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "フルネーム"  %></tr>
    </div>
    <div class="actions mb-3 text-center">
    <tr><%= f.submit "新規登録", class:"btn btn-success mx-auto" %></tr>
    </div>
  <% end %>

 <table class="table table-bordered text-center">
  <% if current_customer.deliveries.present? %>
      <tr>
       <th>郵便番号</th><th>住所</th><th>宛名</th><th></th>
      </tr>
      <% @deliveries.each do |delivery| %>
      <tr>
       <td><%= delivery.postcode %></td>
       <td><%= delivery.address %></td>
       <td><%= delivery.name %></td>
       <td><%= link_to "編集する", edit_delivery_path(delivery), class: "btn btn-primary" %>
           <%= link_to "削除する", delivery_path(delivery.id), method: :delete, class: "btn btn-danger"%></td>
      </tr>
      <% end %>
  <% else %>
      <p>配送先がございません。</p>
  <% end %>
 </table>
</div>
</div>
</div>
</div>