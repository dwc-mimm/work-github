<!--%= render 'layouts/header' %-->

<div class='container'>
 <div class='row'>
  <div class='col-md-12'>
    <th><h4>配送先登録/一覧</h4></th>
  <div class="row">
   
  <%= form_with model: @delivery, url:deliveries_path, local:true do |f| %>
  <table class="new-address">
    <div class=" col-xs-1 ">
     <tr><%= f.label :郵便番号 %></tr>
     <tr><%= f.text_field :postcode %></tr>
    </div>
    <div class=" col-xs-2 ">
     <tr><%= f.label :住所 %></tr>
     <tr><%= f.text_field :address %></tr>
    </div>
    <div class=" col-xs-2 ">
     <tr><%= f.label :宛名 %></tr>
     <tr><%= f.text_field :name %></tr>
    </div>
    <div class=" col-xs-1 ">
    <tr><%= f.submit "新規登録" %></tr>
    </div>
  <% end %>
  </table>
</div>

 <table class="table table-bordered">
 <tr>
  <th>郵便番号</th><th>住所</th><th>宛名</th><th></th>
 </tr>
    <% @deliveries.each do |delivery| %>
 <tr>
  <td><%= delivery.postcode %></td>
  <td><%= delivery.address %></td>
  <td><%= delivery.name %></td>
  <td><%= link_to "編集する", edit_delivery_path(delivery) %> 
      <%= link_to "削除する", delivery_path(delivery), method: :delete %> </td>
 </tr>  
   <% end %>
 </table>
</div>
</div>
</div>
</div>