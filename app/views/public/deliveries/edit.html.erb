<div class="container-fluid col-lg-8">
    <div class="row">
        <div class="col-md-3 mb-3">
          </br>
         <h1><span class="badge badge-secondary offset-md-3">配送先編集</span></h1>
       </div>
    </div>

    <table class="table">
    <%= form_with model: @delivery, url: delivery_path, local:true do |f| %>
        <tbody>
        <tr>
            <th>郵便番号(ハイフンなし)</th>
            <td><%= f.text_field :postcode, autofocus: true, placeholder: "0000000"%></td>
        </tr>
        </tbody>
        <tbody>
        <tr>
            <th>住所</th>
            <td><%= f.text_field :address, autofocus: true, placeholder: "東京都"%></td>
        </tr>
        </tbody>
        <tbody>
        <tr>
             <th>宛名(フルネーム)</th>
             <td><%= f.text_field :name, autofocus: true, placeholder:"令和令子"%></td>
        </tr>
        </tbody>
    </table>

        <div class="row">
            <div class="col-md-5 offset-md-5">
                <%= f.submit "編集内容を保存",class:'btn btn-success' %>
                <% end %>
            </div>
        </div>
 </div>
