<div class="container">
  <div class="row">
    <div class="col-3">
      ジャンル一覧
    </div>
    <div class="col-9">
      <h2>商品一覧(全<%= @products.count %>件)</h2>
      <% @products.each do |product| %>
        <%= link_to product_path(product.id) do %>
          <div>
            <span>><%= attachment_image_tag product, :image %></span
            <%# <%= attachment_image_tag(product, :image, :fill, 150, 150, fallback: "no_image.jpg") %>
            <%# 上記コード画像表示できなかったので 一応違うコード書いておきました%>
            <%= product.name %>
            <%= product.tax_excluded_price %>円
          </div>
        <% end %>
      <% end %>
      <%= paginate @products %>
    </div>
  </div>
</div>