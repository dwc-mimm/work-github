<div class="container">
  <div class="row">
    <div class="col-2">
      ジャンル一覧
    </div>
    <div class="col-10">
      <h2>商品一覧(全<%= @products.count %>件)</h2>
      <% @products.each do |product| %>
        <%= link_to product_path(product.id) do %>
          <div class="text-center">
            <%= attachment_image_tag(product, :image, :fill, 150, 150, fallback: "no_image.jpg") %><br>
            <%= product.name %><br>
            <%= product.tax_excluded_price %>円
          </div>
        <% end %>
      <% end %>
      <%= paginate @products %>
    </div>
  </div>
</div>