div class='container'>
  <div class='row'>
    <div class='col-md-8'>
<div class="field">
 <h4>注文情報確認</h4>
 <% if current_customer.carts.present? %>
<table class='left-header'>
<thead>
 <th>
  <th>商品名</th>
  <th>単価</th>
  <th>数量</th>
  <th>小計</th>
 </th>
  
 <table class='left-body'>
  <% sum = 0 %>
  <% @carts.each do |cart| %>
 <tr>
  <td><%= cart.name %></td>
  <td><%= cart.tax_excluded_price %></td>
  <td><%= cart.product_quantity %></td>
  <td><%= cart.subtotal %></td>
 </tr>
  <% end %>
 </table>
</thead>

<tbody>
 カート内商品
</tbody>
 <!--% end %-->
</table>
<table class='right'>
　<% sum = 0 %>
 <tr>
  <th>送料</th>
  <td><%= @order.postage %></td>
 </tr>
 <tr>
  <th>商品合計</th>
  <td><% sum += @cart.subtotal %></td>
 </tr>
 <tr>
  <th>請求金額</th>
  <td>送料＋商品合計</td>
 </tr>
</table>

 <div class="left-body">
 <tr>
  <th>支払方法</th>
  <td><%= @order.payment_method %></td>
 </tr>
 <tr>
  <th>お届け先</th>
 </tr>
 <tr>
  <td><%= @order.postcode %></td>
  <td><%= @order.address %></td>
  <td><%= @order.name %></td>
 </tr>
 </div>
 <div class="col-xs-11">
   <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
   <%= f.submit "注文を確定させる", class: 'btn btn-primary' %>
  <% end %>
 </div>
  <% else %>
   <th>カート内が空です</th>
  <% end %>
</div>
</div>
</div>
</div>