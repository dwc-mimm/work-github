<div class='container-fluid col-lg-10'>
 <div class="row">
  <div class="col-md-3">
   <h2><span class="badge badge-secondary offset-md-3 mb-3">注文履歴一覧</span></h2>
  </div>
 </div>

 <div class="row">
  <table class="table table-bordered">
   <thead>
    <tr>

      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>

    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
   <tr>
    <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
    <td>〒<%= order.postcode %></br>
     <%= order.address %></br>
     <%= order.name %></td>


     <td>
      <% order.order_products.each do |order_product| %>
         <p><%= order_product.product.name %></p>
      <% end %>
     </td>



     <td><%= (order.payment).round.to_s(:delimited) %>円</td>
     <td><%= order.order_status %></td>
     <td><%= link_to "表示する", order_path(order), class: "btn btn-primary" %> </td>
   </tr>
   <% end %>

  </tbody>
 </table>
 </div>
</div>
