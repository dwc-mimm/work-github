<div class='container'>
 <div class='row'>
  <div class='col-5'>
      <h4>注文履歴一覧</h4>
  <table class="table table-bordered">
   <thead>
    <tr>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
   </tr>
   </thead>

   <tbody>
     <% @orders.each do |order| %>
    <tr>
     <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
     <td><%= order.postcode %></td>
     <td><%= order.address %></td>
     <td><%= order.name %></td>
    </tr>
    <% @carts.each do |cart| %>
    <tr>
     <td><%= cart.product.name %></td>
    </tr>
    <% end %>
    <tr>
     <td><%= order.payment %></td>
    </tr>
    <tr>
     <td><%= order.order_status %></td>
    </tr>
    <tr>
     <td><%= link_to "表示する", order_path(order), class: "d-button" %> </td>
    </tr>
     <% end %>
   </tbody>
  </table>
  </div>
 </div>
</div>