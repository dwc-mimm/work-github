<div class='container-fluid col-lg-10'>
 <div class="row">
   <div class="col-md-3 mb-3">
      <h2><span class="badge badge-secondary offset-md-3">注文履歴一覧</span></h2>
   </div>
 </div>
 
 <table class="table">
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <%= @orders.each do |order| %>
   <tbody>
     <tr>
       <td scope="row"><% order.created_at.strftime('%Y/%m/%d') %></td>
       <td>><%= order.postcode %></td>
       <td><%= order.address %></td>
       <td><%= order.name %></td>
  <%= order.order_products.each do |order_product| %>
       <td><%= order_product.product.name %></td>
       <td><%= order.payment %></td>
       <td><%= order.order_status %></td>
       <td><%= link_to "表示する", order_path(order), class: "d-button" %> </td>
     </tr>
   </tbody>
   <% end %>
  <% end %>
 </table>
</div>