<div class="container-fulid col-lg-10">
 <div class="row">
  <div class="col-md-3 mb-3">
      <h2><span class="badge badge-secondary offset-md-3">注文履歴詳細</span></h2>
   </div>
 </div>
 
 <div class="row">
  <div class="col-md-2 offset-md-1">
   <p>注文情報</p>
  </div>
  
  <div class="col-md-2 offset-md-4">
   <p>請求情報</p>
  </div>
 </div>
 
 <div class="row">
  <div class="col-md-6 offset-md-1">
     <table class="table table-bordered">
     <tbody>
      
       <tr>
         <th>注文日</th>
         <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
       </tr>
     </tbody>
     <tbody>
       <tr>
         <th>配送先</th>
         <td>〒<%= @order.postcode %></br>
             <%= @order.address %></br>
             <%= @order.name %></td>
       </tr>
     </tbody>
     <tbody>
       <tr>
         <th>支払方法</th>
         <td><%= @order.payment_method %></td>
       </tr>
     </tbody>
     <tbody>
       <tr>
         <th>ステータス</th>
         <td><%= @order.order_status %></td>
       </tr>
     </tbody>
   </table>
  </div>
  
  <div class="col-md-4">
   <table class="table table-bordered">
     <tbody>
       <tr>
         <th>商品合計</th>
         <td><%= (@order.payment - 800)%></td>
       </tr>
     </tbody>
     <tbody>
       <tr>
         <th>配送料</th>
         <td>800</td>
       </tr>
     </tbody>
     <tbody>
       <tr>
         <th>ご請求額</th>
         <td><%= @order.payment %></td>
       </tr>
     </tbody>
   </table>
  </div>
 </div>
 
 <div class="row">
  <div class="col-md-4 offset-md-1">
   <p>注文内容</p>
  </div>
 </div>
 
 <div class="row">
  <div class="col-md-8 offset-md-1">
  <table class="table table-bordered">
  <thead>
    <tr>
      <th>商品</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    
     <% sum = 0 %>
       <% @order.order_products.each do |order_product| %>
       <tr>
         <td><%= order_product.product.name %></td>
      <td><%= (order_product.product.tax_excluded_price.to_i. * 1.1).round.to_s(:delimited) %>円</td>
      <td><%= order_product.product_quantity %>個</td>
     <td><%= (order_product.subtotal.to_i. * 1.1).round.to_s(:delimited) %>円
          <% sum += order_product.subtotal %></td>
    <% end %>

    </tr>
    <% end %>
  </tbody>
</table>
</div>

 </div>
 
 
 
</div>