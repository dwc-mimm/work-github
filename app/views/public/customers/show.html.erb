<div class="container-fluid col-lg-10">
    
    <div class="row">
        <div class="col-md-3 mb-3">
          </br>
         <h2><span class="badge badge-secondary offset-md-3">マイページ</span></h2>
       </div>
    </div>

   <div class="row mb-2">
       <div class="col-md-2">
           <h5 class="font-weight-bold">登録情報</h5>
       </div>
       <div class="col-md-2">
               <%= link_to "編集する", {controller: 'customers', action: 'edit'},{method: :get,class:"btn btn-success"}%>
       </div>
   </div>
   
   <table class="table">
      <thead>
        <tr>
            <th>氏名</th>
            <td><%= @customer.last_name %><span class="name">　<%= @customer.first_name %></span></td>
            </tr>
      </thead>
      <thead>
        <tr>
            <th>カナ</th>
            <td><%= @customer.last_name_kana %><span class="name">　<%= @customer.first_name_kana %></span></td>
        </tr>
      </thead>
      <thead>
         <tr>
            <th>郵便番号</th>
            <td><%= @customer.postcode %></td>
        </tr>
      </thead>
      <thead>
         <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
        </tr>
      </thead>
      <tr>
            <th>電話番号</th>
            <td><%= @customer.phone_number %></td>
        </tr>
       <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
       </tr>
    </table>
    
    <div class="row mb-3">
        <div class="col-md-2">
            <h5 class="font-weight-bold">配送先</h5>
        </div>
        <div class="col-md-2">
            <%= link_to "一覧を見る", {controller: 'deliveries', action: 'index'},{method: :get, class: "btn btn-info"}%>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-2">
            <h5 class="font-weight-bold">注文履歴</h5>
        </div>
        <div class="col-md-2">
            <%= link_to "一覧を見る", {controller: 'orders', action: 'index'},{method: :get, class: "btn btn-info"}%>
        </div>
    </div>
</div>