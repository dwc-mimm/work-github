<!--%= render 'layouts/header' %-->

<div class="inner">

    <h4 class="banner">マイページ</h4>
    <div class="button-class">
        <h5>登録情報</h5>
        <%= button_to "編集する", {controller: 'customers', action: 'edit'},{method: :get, class: "button"}%>
    </div>

    <table class="table">
            <tr>
                <th>氏名</th>
                <td><%= @customer.last_name %><span class="name"><%= @customer.first_name %></span></td>
            </tr>
            <tr>
                <th>カナ</th>
                <td><%= @customer.last_name_kana %><span class="name"><%= @customer.first_name_kana %></span></td>
            </tr>
            <tr>
                <th>郵便番号</th>
                <td><%= @customer.postcode %></td>
            </tr>
            <tr>
                <th>住所</th>
                <td><%= @customer.address %></td>
            </tr>
            <tr>
                <th>電話番号</th>
                <td><%= @customer.phone_number %></td>
            </tr>
            <tr>
                <th>メールアドレス</th>
                <td><%= @customer.email %></td>
            </tr>

    </table>
    <div class="button-class">
        <p>配送先</p>
        <%= button_to "一覧を見る", {controller: 'deliveries', action: 'index'},{method: :get, class: "button"}%>
    </div>
    <div class="button-class">
        <p>注文履歴</p>
        <%= button_to "一覧を見る", {controller: 'orders', action: 'index'},{method: :get, class: "button"}%>
</div>
</div>