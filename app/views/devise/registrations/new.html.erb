
<%#  ヘッダー部分テンプレート挿入%>
<%# CSSでの装飾は後ほど進めていく %>


<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="contents-box">
    <h3 class="banner">新規会員登録</h3>
    <div class="field">
      <%= f.label :name, "名前" %>
      <div class="field-box">
        <%= f.text_field :last_name, autofocus: true %>
        <%= f.text_field :first_name, autofocus: true %>
        </div>
    </div>
    
    <div class="field">
      <%= f.label :name, "フリガナ" %>
      <div class="field-box">
        <%= f.text_field :last_name_kana, autofocus: true %>
        <%= f.text_field :first_name_kana, autofocus: true %>
        </div>
    </div>
  
    <div class="field">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    
    <div class="field">
      <%= f.label :name, "郵便番号(ハイフンなし)" %>
      <div class="field-box">
        <%= f.text_field :postcode, autofocus: true %>
        </div>
    </div>
    
    <div class="field">
      <%= f.label :name, "住所" %>
      <div class="field-box">
        <%= f.text_field :address, autofocus: true %>
        </div>
    </div>
    
    <div class="field">
      <%= f.label :name, "電話番号(ハイフンなし)" %>
      <div class="field-box">
        <%= f.text_field :phone_number, autofocus: true %>
        </div>
    </div>
  
    <div class="field">
      <%= f.label :password,"パスワード(6文字以上)" %>
      <% if @minimum_password_length %>
      
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  
    <div class="field">
      <%= f.label :password_confirmation,"パスワード(確認用)" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  
    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  </div>
  
  <div class="contents">
    <h3 class="banner">既に登録済みの方</h3>
    <p><%= link_to "こちら",new_customer_session_path %>からログインしてください。</p>
  </div>
<% end %>

