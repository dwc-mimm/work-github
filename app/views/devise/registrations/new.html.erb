<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 text-center mx-auto">
      <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div>
          <h3 class="banner mx-auto">新規会員登録</h3>
          <div class="form-group">
            <%= f.label :name, "名前" %>
            <%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: "姓" %>
            <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "名"%>
          </div>

          <div class="form-group">
            <%= f.label :name, "フリガナ" %>
            <%= f.text_field :last_name_kana, autofocus: true, class: "form-control", placeholder: "セイ" %>
            <%= f.text_field :first_name_kana, autofocus: true, class: "form-control", placeholder: "メイ" %>
          </div>

          <div class="form-group">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "example@example.com" %>
          </div>

          <div class="form-group">
            <%= f.label :name, "郵便番号(ハイフンなし)" %>
            <%= f.text_field :postcode, autofocus: true, class: "form-control", placeholder: "0000000" %>
          </div>

          <div class="form-group">
            <%= f.label :name, "住所" %>
            <%= f.text_field :address, autofocus: true, class: "form-control", placeholder: "住所" %>
          </div>

          <div class="form-group">
            <%= f.label :name, "電話番号(ハイフンなし)" %>
            <%= f.text_field :phone_number, autofocus: true, class: "form-control", placeholder: "09000000000" %>
          </div>

          <div class="form-group">
            <%= f.label :password, "パスワード(6文字以上)" %>
            <% if @minimum_password_length %>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "6文字以上" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation,"パスワード(確認用)" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "6文字以上(確認用)" %>
          </div>

          <div class="actions">
            <%= f.submit "新規登録", class:"btn btn-primary mx-auto mb-2"%>
          </div>
        </div>

        <div class="contents">
          <p><%= link_to "既に登録済みの方",new_customer_session_path %></p>
        </div>
      <% end %>

    </div>
  </div>
</div>
