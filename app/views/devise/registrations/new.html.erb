<div class="container-fluid col-lg-10">
<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <!--<div class="contents-box">-->
    <div class="row">
     <div class="col">
        <div class="list-group">
          </br>
         <h1><span class="badge badge-secondary badge-info">新規会員登録</span></h1>
        </div>
      </div>
    </div>
    
    </br>
    <div class="row">
      <div class="col-md-3">
        <%= f.label :name, "名前" %>
      </div>
      <div class="col-md-3 offset-md">
        <%= f.text_field :last_name, autofocus: true,placeholder:"令和",class:"form-inline" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :first_name, autofocus: true,placeholder:"道子",class:"form-inline" %>
      </div>
    </div>
    
    </br>
    
    <div class="row">
      <div class="col-md-3">
        <%= f.label :name, "フリガナ" %>
      </div>
      <div class="col-md-3 offset-md">
        <%= f.text_field :last_name_kana, autofocus: true,placeholder:"レイワ" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :first_name_kana, autofocus: true,placeholder:"ミチコ" %>
      </div>
    </div>
    
    </br>
    
    <div class="row">
      <div class="col-md-3">
        <%= f.label :email, "メールアドレス" %>
      </div>
      <div class="col-md-3 offset-md">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"sample@example.com" %>
      </div>
    </div>
    
    </br>
    
    <div class="row">
      <div class="col-md-3">
        <%= f.label :name, "郵便番号(ハイフンなし)" %>
      </div>
      <div class="col-md-3 offset-md">
        <%= f.text_field :postcode, autofocus: true,placeholder:"0000000" %>
      </div>
    </div>
    
    </br>
    
    <div class="row">
      <div class="col-md-3">
        <%= f.label :name, "住所" %>
      </div>
      <div class="col-md-8 offset-md">
        <%= f.text_field :address, autofocus: true,placeholder:"東京都新宿区神園町0-0",class:"form-control"%>
      </div>
    </div>
    
    </br>
    
    <div class="row">
      <div class="col-md-3">
        <%= f.label :name, "電話番号(ハイフンなし)" %>
      </div>
      <div class="col-md-3 offset-md">
        <%= f.text_field :phone_number, autofocus: true,placeholder:"00000000000" %>
      </div>
    </div>
    
    </br>
    
    <div class="row">
      <div class="col-md-3">
        <%= f.label :password,"パスワード(6文字以上)" %>
      <% if @minimum_password_length %>
      
      <% end %><br />
      </div>
      <div class="col-md-3 offset-md">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>
    
    </br>
  
    <div class="row">
      <div class="col-md-3">
        <%= f.label :password_confirmation,"パスワード(確認用)" %><br />
      </div>
      <div class="col-md-3 offset-md">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>
    
    </br>
  
    <div class="row">
      <div class="col-md-3 offset-md">
        <%= f.submit "新規登録",class:"btn btn-success" %>
      </div>
    </div>
    </br>
    <% end %>
    
    <div class="row">
      <div class="col-md-4">
        <h2><span class="badge badge-secondary">すでに登録済みの方</span></h2>
      </div>
    <div class="col-md-4">
      <span class="align-middle"><%= link_to "こちら",new_customer_session_path %>からログインしてください。</span>
    </div>
    
  </div>
  </div>
  
</div>
